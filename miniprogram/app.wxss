/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  justify-content: center;/*水平居中*/
}

.container_row {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  justify-content: center;/*水平居中*/
}

open-data[type="userAvatarUrl"]{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
} 
